@page
@model SWP.UI.Pages.News.NewsDispalyModel
@{
}

<div class="container-fluid product">

    <div class="container">
       <div class="jumbotron-news">
            <div class="container">
                <div class="row">
                    <div class="col-10">
                        <h2 class="news-category pb-2">@Model.DataModel.Title</h2>
                                              <p class="text-black-50">@Model.DataModel.Created</p>
                    </div>
                    <div class="col-2">
                        <div>
                            @if (!string.IsNullOrEmpty(Model.DataModel.ImagePath))
                            {
                                var imagePath = $"/Image/{Model.DataModel.ImagePath}";
                                <img class="img-thumbnail" src="@imagePath" />
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class=" col-12">
                <p class="text-uppercase"><strong>@Model.DataModel.Description</strong></p>
                <p class="text-body">@Html.Raw(Model.DataModel.Body) </p>
            </div>
        </div>
    </div>
</div>