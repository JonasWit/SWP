@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Ponowna aktywacja konta";
}


<div class="row pb-3">
    <div class="m-auto">
        <h4 class="pb-3 pt-3">@ViewData["Title"]</h4>
       <hr />
        <form method="post" class="pb-3">
            <p>Wprowadź adres email podany przy rejestracji konta, aby otrzymać ponownie link aktywacyjny</p>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email" class="pb-2"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn">Resend</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
