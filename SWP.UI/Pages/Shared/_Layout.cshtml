@inject IAuthorizationService authService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Systemy Wspomagania Pracy</title>
    <base href="/" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" integrity="sha512-1PKOgIY59xJ8Co8+NE6FZ+LOAZKjy+KY8iq0G4B3CyeY6wYHN3yt9PW0XpSriVlkMXe40PTKnXrLnZ9+fkDaog==" crossorigin="anonymous" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <div class="container-fluid">
        <nav class="main-nav navbar navbar-expand-lg navbar-light sticky-top pb-2 ml-5">
            <a class="navbar-brand" asp-page="/Index">SWP</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                <ul class="main-menu nav navbar-nav">
                    <li class="nav-item p-lg-4">
                        <environment names="Development">
                            <strong>Development Environment</strong>
                        </environment>
                    </li>
                    <li class="nav-item p-lg-4">
                        <a asp-page="/Index">Strona Główna</a>
                    </li>
                    <li class="nav-item p-lg-4">
                        <a asp-page="/News/Overview">Aktualności</a>
                    </li>
                    <li class="nav-item p-lg-4">
                        <a asp-page="/Marketing/Products">Produkty</a>
                    </li>
                    <li class="nav-item p-lg-4">
                        <a asp-page="/Rules/Index">Regulamin</a>
                    </li>
                    <li class="nav-item p-lg-4">
                        <a asp-page="/Marketing/Contact">Kontakt</a>
                    </li>

                    @if (User.Identity.IsAuthenticated && (User.IsInRole("Administrators") || User.IsInRole("Users")))
                    {
                        <li class="nav-item p-lg-4">
                            <a asp-page="/Applications/Index">Moje Aplikacje</a>
                        </li>
                    }

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Administrators"))
                    {
                        <li class="nav-item p-lg-4">
                            <a asp-page="/Admin/Index">Admin</a>
                        </li>
                    }

                </ul>
                <partial name="_LoginPartial">
            </div>
        </nav>
        <hr />
    </div>

    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container-fluid">
            <div class="text-center mt-5">
                &copy; @DateTime.Now.Year - SWP - <a asp-page="/Privacy">Polityka Prywatności</a>
                <div class="text-center mt-2"><a href="http://www.webcouple.pl/">By WebCouple</a></div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/_framework/blazor.server.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
