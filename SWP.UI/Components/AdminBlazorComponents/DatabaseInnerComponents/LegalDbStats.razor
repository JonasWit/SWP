
<div class="section">
    <RadzenCard>
        <div class="columns is-0 is-centered">
            <h2>Select Profile</h2>
        </div>
        <div class="columns is-0 is-centered">
            <RadzenDropDown AllowClear="true" TValue="int"
                            FilterCaseSensitivity="FilterCaseSensitivity.CaseInsensitive" FilterOperator="StringFilterOperator.StartsWith" AllowFiltering="true"
                            Data="@ProfileFilterRecords" TextProperty="Profile" ValueProperty="Id" Change="@(args => SelectedProfileChange(args))" />
        </div>
    </RadzenCard>
</div>

@if (Statistics != null)
{
    <div class="section">
        <RadzenCard>
            <table class="table">
                <thead>
                    <tr>
                        <th>Data</th>
                        <th>Count</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>Clients</th>
                        <td>@Statistics.ClientsCount</td>
                    </tr>
                </tbody>
            </table>
        </RadzenCard>
    </div>
}


